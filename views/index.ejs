<%- include('./partials/header') %>

    <% if (error && error.length> 0) { %>
        <div
            class="absolute top-10 left-1/2 transform -translate-x-1/2 p-4 rounded-md bg-red-500 shadow-lg animate-bounce">
            <span class="inline-block text-white">
                <%= error %>
            </span>
        </div>
        <% } %>



            <div class="container mx-auto min-h-screen flex items-center justify-center bg-cover bg-center">
                <div
                    class="flex flex-col lg:flex-row bg-white bg-opacity-90 p-8 rounded-lg shadow-2xl max-w-4xl w-full">
                    <div class="flex flex-1 items-center justify-center p-5 bg-gray-100 rounded-l-lg">
                        <div class="w-full max-w-md">
                            <h3 class="text-4xl font-bold mb-6 text-center text-gray-900">Welcome to <span
                                    class="text-yellow-500">Watchara</span></h3>
                            <h4 class="text-2xl mb-6 text-center text-gray-600">Create your account</h4>
                            <form autocomplete="off" action="/users/register" method="post" class="space-y-6">
                                <input
                                    class="w-full px-4 py-3 border rounded-md bg-gray-200 focus:ring-2 focus:ring-yellow-500"
                                    type="text" placeholder="Full Name" name="userName">
                                <input
                                    class="w-full px-4 py-3 border rounded-md bg-gray-200 focus:ring-2 focus:ring-yellow-500"
                                    type="email" placeholder="Email" name="email">
                                <input
                                    class="w-full px-4 py-3 border rounded-md bg-gray-200 focus:ring-2 focus:ring-yellow-500"
                                    type="password" placeholder="Password" name="password">
                                <input
                                    class="w-full py-2 rounded-full bg-yellow-500 text-gray-900 font-bold hover:bg-yellow-600 transition duration-300"
                                    type="submit" value="Create My Account">
                            </form>
                        </div>
                    </div>

                    <div class="flex flex-1 items-center justify-center p-8 bg-gray-200 rounded-r-lg">
                        <div class="w-full max-w-md">
                            <h4 class="text-2xl mb-6 text-center text-gray-600">Login to your account</h4>
                            <form autocomplete="off" action="/users/login" method="post" class="space-y-6">
                                <input
                                    class="w-full px-4 py-3 border rounded-md bg-gray-300 focus:ring-2 focus:ring-yellow-500"
                                    type="email" placeholder="Email" name="email">
                                <input
                                    class="w-full px-4 py-3 border rounded-md bg-gray-300 focus:ring-2 focus:ring-yellow-500"
                                    type="password" placeholder="Password" name="password">
                                <input
                                    class="w-full py-2 rounded-full bg-yellow-500 text-gray-900 font-bold hover:bg-yellow-600 transition duration-300"
                                    type="submit" value="Login">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('./partials/footer') %>