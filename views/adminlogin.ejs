<!-- adminlogin.ejs -->

<%- include('./partials/header') %>

    <div class="min-h-screen flex flex-col bg-white">
        <% if (error && error.length> 0) { %>
            <div id="flash-message"
                class="absolute top-20 left-1/2 transform -translate-x-1/2 p-4 rounded-md bg-red-500 text-white shadow-lg animate-bounce">
                <%= error %>
            </div>
            <% } %>

                <% if (success && success.length> 0) { %>
                    <div id="flash-message"
                        class="absolute top-20 left-1/2 transform -translate-x-1/2 p-4 rounded-md bg-green-500 text-white shadow-lg animate-bounce">
                        <%= success %>
                    </div>
                    <% } %>

                        <div
                            class="container mx-auto px-2 sm:px-6 lg:px-3 grid sm:grid-cols-1 md:grid-cols-2  gap-5 place-items-center h-screen">
                            <!-- Left Panel: Login Form -->
                            <div class="bg-white p-8 rounded-lg shadow-lg">
                                <h2 class="text-2xl font-bold mb-6 text-gray-800">Admin Login</h2>
                                <form action="/owner/login" method="POST" class="mb-4">
                                    <div class="mb-4">
                                        <label for="loginEmail" class="block text-gray-700 font-medium">Email</label>
                                        <input type="email" id="loginEmail" name="email" placeholder="Enter your email"
                                            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
                                            required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="loginPassword"
                                            class="block text-gray-700 font-medium">Password</label>
                                        <input type="password" id="loginPassword" name="password"
                                            placeholder="Enter your password"
                                            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
                                            required>
                                    </div>
                                    <button type="submit"
                                        class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-200">Login</button>
                                </form>
                            </div>

                            <!-- Right Panel: Registration Form -->
                            <div class="bg-white p-8 rounded-lg shadow-lg">
                                <h2 class="text-2xl font-bold mb-6 text-gray-800">Register New Admin</h2>
                                <form action="/owner/create" method="POST">
                                    <div class="mb-4">
                                        <label for="registerFullName" class="block text-gray-700 font-medium">Full
                                            Name</label>
                                        <input type="text" id="registerFullName" name="fullName"
                                            placeholder="Enter your full name"
                                            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
                                            required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="registerEmail" class="block text-gray-700 font-medium">Email</label>
                                        <input type="email" id="registerEmail" name="email"
                                            placeholder="Enter your email"
                                            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
                                            required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="registerPassword"
                                            class="block text-gray-700 font-medium">Password</label>
                                        <input type="password" id="registerPassword" name="password"
                                            placeholder="Enter your password"
                                            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
                                            required>
                                    </div>
                                    <button type="submit"
                                        class="w-full bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition duration-200">Register</button>
                                </form>
                            </div>
                        </div>
    </div>

    <%- include('./partials/footer') %>